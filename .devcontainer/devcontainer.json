{
  "name": "WP Plugin Codespace (single-container LAMP)",
  "dockerFile": ".devcontainer/Dockerfile",
  "remoteUser": "vscode",
  "forwardPorts": [80],
  "containerEnv": {
    "WP_DB_NAME": "wordpress",
    "WP_DB_USER": "wordpress",
    "WP_DB_PASS": "wordpress",
    "WP_DB_HOST": "127.0.0.1",
    "WP_TITLE": "Codespace Dev",
    "WP_ADMIN_USER": "admin",
    "WP_ADMIN_PASS": "admin",
    "WP_ADMIN_EMAIL": "admin@example.com",
    "PLUGIN_SLUG": "hello-world"
  },
  "postStartCommand": "/workspaces/wp-plugin-codespace/.devcontainer/bin/bootstrap-wp.sh"
}
